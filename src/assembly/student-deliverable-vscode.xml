<assembly xmlns="http://maven.apache.org/ASSEMBLY/2.0.0"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/2.0.0 http://maven.apache.org/xsd/assembly-2.0.0.xsd">
  <id>vscode-deliverable</id>
  <formats>
    <format>zip</format>
  </formats>

  <baseDirectory>battleship</baseDirectory>
  <includeBaseDirectory>false</includeBaseDirectory>

  <fileSets>
    <fileSet>
      <directory>${project.basedir}/src/main/java</directory>
      <includes>
        <include>my/**</include>
      </includes>
      <outputDirectory>battleship_${current.year}/misc/src</outputDirectory>
    </fileSet>
    <fileSet>
      <directory>${project.basedir}/doc</directory>
      <includes>
        <include>*.pdf</include>
      </includes>
      <excludes>
        <exclude>*DrJava*</exclude>
      </excludes>
      <outputDirectory>battleship_${current.year}/doc</outputDirectory>
    </fileSet>
    <fileSet>
      <directory>${project.build.directory}/site/apidocs</directory>
      <outputDirectory>battleship_${current.year}/doc/javadoc</outputDirectory>
    </fileSet>
    <fileSet>
      <directory>${project.basedir}/sampleBoards</directory>
      <includes>
        <include>Classic*</include>
      </includes>
      <outputDirectory>battleship_${current.year}/battleship_vscode/sampleBoards</outputDirectory>
    </fileSet>
    <fileSet>
      <directory>${project.build.directory}</directory>
      <includes>
        <include>*.jar</include>
      </includes>
      <outputDirectory>battleship_${current.year}/battleship_vscode/lib</outputDirectory>
    </fileSet>
    <fileSet>
      <directory>${project.basedir}/vscode</directory>
      <includes>
        <include>*.json</include>
      </includes>
      <outputDirectory>battleship_${current.year}/battleship_vscode/.vscode</outputDirectory>
    </fileSet>
  </fileSets>
  <files>
    <file>
      <source>LICENSE</source>
      <outputDirectory></outputDirectory>
    </file>
    <file>
      <source>${project.build.directory}/TemplatePlayer.java</source>
      <outputDirectory>battleship_${current.year}/battleship_vscode/src/student/player</outputDirectory>
    </file>
  </files>
</assembly>
